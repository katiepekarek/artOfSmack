<% if current_user %>
  Welcome <%= current_user.name %>!
  <%= link_to "Sign Out", signout_path %>

<%= form_for Tweet.new do |f|%>
  <%= f.text_area :text %>
  <%= f.submit %>
<% end %>
 <% if current_user && current_user.provider == "twitter" %>
  <%= render @recent_timeline %>
<% end %>


<% else %>
  <%= link_to "Sign in with Twitter", "/auth/twitter" %>
<% end %>
